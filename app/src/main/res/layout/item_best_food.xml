<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp"
    android:layout_height="295dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/iv_food"
            android:src="@drawable/img"
            android:layout_height="200dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_food"
            android:text="title"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/ipix_12px"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/ipix_12px"
            android:text="0å…ƒ"
            android:textColor="@color/red"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.857"
            app:layout_constraintStart_toEndOf="@+id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/iv_food" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_star_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="4"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/ipix_12px"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="25dp"
            android:id="@+id/iv_star"
            app:layout_constraintStart_toEndOf="@id/tv_star_number"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/star"
            android:layout_marginStart="10dp"
            android:layout_height="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_time_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_time"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:text="time"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/ipix_12px"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="25dp"
            android:id="@+id/iv_time"
            app:layout_constraintStart_toEndOf="@id/tv_time_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/red"
            android:src="@drawable/time"
            android:layout_marginStart="10dp"
            android:layout_height="25dp"/>
        <TextView
            android:id="@+id/tv_add"
            android:text="+"
            android:textSize="40sp"
            android:fontFamily="@font/ipix_12px"
            android:gravity="center"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/plus_background"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
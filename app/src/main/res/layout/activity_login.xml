<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/logo"
                    android:id="@+id/iv_logo"
                    android:layout_marginTop="40dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    app:layout_constraintTop_toBottomOf="@id/iv_logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_name_2"
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_name_1"
                    android:fontFamily="@font/ipix_12px"
                    android:textStyle="bold"
                    android:textSize="35sp"
                    android:text="海餐"
                    android:padding="5dp"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_name_2"
                    app:layout_constraintTop_toBottomOf="@id/iv_logo"
                    app:layout_constraintStart_toEndOf="@id/tv_name_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:textSize="35sp"
                    android:padding="5dp"
                    android:text="App"
                    android:fontFamily="@font/ipix_12px"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_width="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:hint="请输入邮箱地址"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:id="@+id/et_email"
                    android:fontFamily="@font/ipix_12px"
                    android:background="@drawable/edittext_background"
                    app:layout_constraintTop_toBottomOf="@id/tv_name_1"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:layout_height="50dp"/>
                <EditText
                    android:layout_width="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:hint="请输入密码"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:id="@+id/et_password"
                    android:fontFamily="@font/ipix_12px"
                    android:background="@drawable/edittext_background"
                    app:layout_constraintTop_toBottomOf="@id/et_email"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:layout_height="50dp"/>
                <TextView
                    app:layout_constraintTop_toBottomOf="@id/et_password"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/tv_forget_password"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="18sp"
                    android:fontFamily="@font/ipix_12px"
                    android:layout_marginTop="32dp"
                    android:text="忘记密码了?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_forget_password"
                    android:background="@drawable/red_button_background"
                    android:text="登录"
                    android:layout_margin="32dp"
                    android:id="@+id/btn_login"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    style="@android:style/Widget.Button"
                    android:fontFamily="@font/ipix_12px"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    app:layout_constraintTop_toBottomOf="@id/btn_login"
                    android:id="@+id/ll_sep"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="32dp"
                    android:layout_height="wrap_content">
                    <View
                        android:background="#B2B589"
                        android:layout_width="100dp"
                        android:layout_height="1dp"/>
                    <TextView
                        android:id="@+id/tv_other_way"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/ipix_12px"
                        android:text="或者"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"/>
                    <View
                        android:background="#B2B589"
                        android:layout_width="100dp"
                        android:layout_height="1dp"/>
                </LinearLayout>
                <ImageView
                    android:layout_marginTop="32dp"
                    android:layout_width="40dp"
                    app:layout_constraintTop_toBottomOf="@id/ll_sep"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/wechat"
                    android:id="@+id/iv_wechat"
                    app:layout_constraintEnd_toStartOf="@id/iv_qq"
                    android:layout_height="40dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/iv_qq"
                    app:layout_constraintTop_toTopOf="@id/iv_wechat"
                    app:layout_constraintStart_toEndOf="@id/iv_wechat"
                    android:src="@drawable/qq"
                    app:layout_constraintEnd_toStartOf="@id/iv_weibo"
                    android:layout_height="40dp"/>
                <ImageView
                    android:id="@+id/iv_weibo"
                    android:layout_width="40dp"
                    app:layout_constraintTop_toTopOf="@id/iv_wechat"
                    app:layout_constraintStart_toEndOf="@id/iv_qq"
                    android:src="@drawable/weibo"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="40dp"/>
                <TextView
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@id/iv_wechat"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_register"
                    android:text="还没有账号？"
                    android:id="@+id/tv_no_account"
                    android:fontFamily="@font/ipix_12px"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_register"
                    app:layout_constraintTop_toTopOf="@id/tv_no_account"
                    app:layout_constraintStart_toEndOf="@id/tv_no_account"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/red"
                    android:text="注册"
                    android:fontFamily="@font/ipix_12px"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
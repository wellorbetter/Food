<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">
    <ScrollView
        android:id="@+id/sv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/ipix_12px"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:text="欢迎您"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@id/tv_nickname"
                    android:id="@+id/tv_welcome"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/ipix_12px"
                    app:layout_constraintStart_toStartOf="@id/tv_welcome"
                    app:layout_constraintTop_toBottomOf="@id/tv_welcome"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="卢本伟"
                    android:id="@+id/tv_nickname"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="50dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_welcome"
                    android:src="@drawable/logout"
                    android:background="@null"
                    android:layout_height="50dp"/>
                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="50dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_nickname"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ll_search"
                    android:id="@+id/ib_setting"
                    android:src="@drawable/settings"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    android:background="@drawable/grey_background"
                    android:layout_height="50dp"/>
                <LinearLayout
                    app:layout_constraintTop_toTopOf="@id/ib_setting"
                    app:layout_constraintStart_toEndOf="@id/ib_setting"
                    android:id="@+id/ll_search"
                    android:background="@drawable/grey_background"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toStartOf="@id/ib_basket"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp">
                    <EditText
                        android:id="@+id/et_search"
                        android:background="@null"
                        android:fontFamily="@font/ipix_12px"
                        android:gravity="center"
                        android:hint="请搜索想要的..."
                        android:textSize="16sp"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"/>
                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="50dp"
                        android:background="@null"
                        android:src="@drawable/search_icon"
                        android:layout_height="50dp"/>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/ib_basket"
                    app:layout_constraintStart_toEndOf="@id/ll_search"
                    app:layout_constraintTop_toTopOf="@id/ib_setting"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="50dp"
                    android:background="@drawable/grey_background"
                    android:src="@drawable/basket"
                    android:layout_height="50dp"/>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="0.3"
                    android:id="@+id/ll_location"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ll_time"
                    app:layout_constraintTop_toBottomOf="@id/ib_setting"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/grey_background"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:id="@+id/iv_location"
                        android:layout_gravity="center"
                        android:src="@drawable/location"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:layout_width="match_parent"
                        android:id="@+id/sn_location"
                        android:layout_marginStart="5dp"
                        android:background="@null"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="0.3"
                    android:id="@+id/ll_time"
                    app:layout_constraintStart_toEndOf="@id/ll_location"
                    android:background="@drawable/grey_background"
                    app:layout_constraintEnd_toStartOf="@id/ll_price"
                    app:layout_constraintTop_toTopOf="@id/ll_location"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="10dp"
                        android:id="@+id/iv_time"
                        android:layout_gravity="center"
                        android:src="@drawable/time"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:layout_width="match_parent"
                        android:id="@+id/sn_time"
                        android:layout_marginStart="5dp"
                        android:background="@null"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/grey_background"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintHorizontal_weight="0.3"
                    android:id="@+id/ll_price"
                    app:layout_constraintStart_toEndOf="@id/ll_time"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/ll_location"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="10dp"
                        android:id="@+id/iv_price"
                        android:layout_gravity="center"
                        android:src="@drawable/dollar"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:layout_width="match_parent"
                        android:id="@+id/sn_price"
                        android:layout_marginStart="5dp"
                        android:background="@null"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/tv_best_hint"
                    app:layout_constraintTop_toBottomOf="@id/ll_location"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/ipix_12px"
                    android:textSize="26sp"
                    android:layout_marginStart="20dp"
                    android:text="今天的最佳榜单"
                    android:layout_height="wrap_content"/>
                <TextView
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_best_hint"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/red"
                    android:text="查看所有"
                    android:textSize="18sp"
                    android:fontFamily="@font/ipix_12px"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_best_hint"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/rv_best"
                    app:layout_constraintTop_toBottomOf="@id/tv_best_hint"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="310dp"/>
                <ProgressBar
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/rv_best"
                    app:layout_constraintEnd_toEndOf="@id/rv_best"
                    android:id="@+id/pb_best"
                    app:layout_constraintTop_toTopOf="@id/rv_best"
                    app:layout_constraintBottom_toBottomOf="@id/rv_best"
                    android:layout_height="295dp"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/tv_choose"
                    app:layout_constraintTop_toBottomOf="@id/rv_best"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/ipix_12px"
                    android:textSize="26sp"
                    android:layout_marginStart="20dp"
                    android:text="选择菜单"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:id="@+id/rv_category"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_choose"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="295dp"/>
                <ProgressBar
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/rv_category"
                    app:layout_constraintEnd_toEndOf="@id/rv_category"
                    app:layout_constraintTop_toTopOf="@id/rv_category"
                    android:id="@+id/pb_category"
                    app:layout_constraintBottom_toBottomOf="@id/rv_category"
                    android:layout_height="310dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>